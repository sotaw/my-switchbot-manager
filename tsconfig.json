{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "incremental": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}